{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "skipLibCheck": false,
    "outDir": "./lib",
    "rootDir": "src",
    /* Bundler mode */
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,

    "jsx": "react-jsx", // support JSX
    "jsxImportSource": "@/jsx/core",
    "paths": {
      "@tests/": ["./tests/"],
      "@tests/*": ["./tests/*"],
      "@/": ["./src/"],
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  },
  
  "include": ["*.ts", "src/**/*.ts"],
  "exclude": ["node_modules/@types/react"]
}
